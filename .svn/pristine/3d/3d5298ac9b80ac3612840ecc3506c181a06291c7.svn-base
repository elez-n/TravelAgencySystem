package view;

import javax.swing.JMenuBar;
import javax.swing.ImageIcon;
import javax.swing.JMenu;
import javax.swing.JMenuItem;
import javax.swing.KeyStroke;

import listeners.MenubarButtonActionListener;
import listeners.ToolbarButtonsActionListener;

import java.awt.Image;
import java.awt.Toolkit;
import java.awt.event.KeyEvent;


/**
 * Klasa {@link Menubar} predstavlja glavni meni bar aplikacije.
 * 
 * @author G4
 */
public class Menubar extends JMenuBar {

    Toolkit toolkit = Toolkit.getDefaultToolkit();

    // === FILE MENU ===
    public JMenu fileMenu;
    public JMenuItem loadXml;
    public JMenuItem switchXml;
    public JMenuItem exitItem;
    public JMenuItem logout;

    // === EDIT MENU ===
    public JMenu editMenu;

    // Navigacija
    //public JMenu navigationMenu;
    public JMenuItem firstItem;
    public JMenuItem previousItem;
    public JMenuItem nextItem;
    public JMenuItem lastItem;

    // Stanja
   // public JMenu stateMenu;
    public JMenuItem newItem;
    public JMenuItem editItem;
    public JMenuItem deleteItem;

    // Potvrda
    //public JMenu confirmMenu;
    public JMenuItem acceptItem;
    public JMenuItem cancelItem;

    // Izvještaj
    public JMenu reportMenu;
    public JMenuItem akcijskePonudeIzvjestaj;
    public JMenuItem vozniParkIzvjestaj;
    public JMenuItem cjenovnikIzvjestaj;
    public JMenuItem putovanjeIzvjestaj;
    //Napredni izvjestaj
    public JMenuItem voziloNaPutovanjuIzvjestaj;
    public JMenuItem poslovanjePoslovniceIzvjestaj;

    // === HELP MENU ===
    public JMenu helpMenu;
    public JMenuItem aboutItem;

    
    /**
     * Konstruktor koji inicijalizuje sve menije, stavke menija, prečice i ikone.
     */
    public Menubar() {
        // === FILE MENU ===
        fileMenu = new JMenu("File");
        fileMenu.setMnemonic(KeyEvent.VK_F);

        loadXml = new JMenuItem("Load XML");
        loadXml.setAccelerator(KeyStroke.getKeyStroke(KeyEvent.VK_L, KeyEvent.CTRL_DOWN_MASK));

        switchXml = new JMenuItem("Switch XML");
        switchXml.setAccelerator(KeyStroke.getKeyStroke(KeyEvent.VK_S, KeyEvent.CTRL_DOWN_MASK));
        
        logout = new JMenuItem("Log out");

		logout.setActionCommand("logout");
		logout.setIcon(new ImageIcon(toolkit.getImage("icons/icons/logout.png")));

        exitItem = new JMenuItem("Exit");
        exitItem.setAccelerator(KeyStroke.getKeyStroke(KeyEvent.VK_Q, KeyEvent.CTRL_DOWN_MASK));
        exitItem.setIcon(new ImageIcon(toolkit.getImage("resources/exit.png")));
        exitItem.addActionListener(e -> System.exit(0));

        fileMenu.add(loadXml);
        fileMenu.add(switchXml);
        fileMenu.addSeparator();
        fileMenu.add(logout);
        fileMenu.add(exitItem);

        // === EDIT MENU ===
        editMenu = new JMenu("Edit");
        editMenu.setMnemonic(KeyEvent.VK_E);

        //navigationMenu = new JMenu("Navigation");
        firstItem = new JMenuItem("First");
        previousItem = new JMenuItem("Previous");
        nextItem = new JMenuItem("Next");
        lastItem = new JMenuItem("Last");
        
        nextItem.setActionCommand("next");
        firstItem.setActionCommand("first");
        lastItem.setActionCommand("last");
        previousItem.setActionCommand("previous");
        MenubarButtonActionListener actionListener = new MenubarButtonActionListener();
        nextItem.addActionListener(actionListener);
        firstItem.addActionListener(actionListener);
        previousItem.addActionListener(actionListener);
        lastItem.addActionListener(actionListener);
		logout.addActionListener(actionListener);

        firstItem.setIcon(new ImageIcon(toolkit.getImage("resources/first.png").getScaledInstance(20, 20, Image.SCALE_SMOOTH)));
        previousItem.setIcon(new ImageIcon(toolkit.getImage("resources/previous.png").getScaledInstance(20, 20, Image.SCALE_SMOOTH)));
        nextItem.setIcon(new ImageIcon(toolkit.getImage("resources/next.png").getScaledInstance(20, 20, Image.SCALE_SMOOTH)));
        lastItem.setIcon(new ImageIcon(toolkit.getImage("resources/last.png").getScaledInstance(20, 20, Image.SCALE_SMOOTH)));

        editMenu.add(firstItem);
        editMenu.add(previousItem);
        editMenu.add(nextItem);
        editMenu.add(lastItem);
        editMenu.addSeparator();

        //stateMenu = new JMenu("Data");
        newItem = new JMenuItem("New");
        newItem.setAccelerator(KeyStroke.getKeyStroke(KeyEvent.VK_N, KeyEvent.CTRL_DOWN_MASK));
        newItem.setActionCommand("new");
        newItem.addActionListener(actionListener);
        editItem = new JMenuItem("Edit");
        editItem.setAccelerator(KeyStroke.getKeyStroke(KeyEvent.VK_E, KeyEvent.CTRL_DOWN_MASK));
        editItem.setActionCommand("edit");
        editItem.addActionListener(actionListener);
        deleteItem = new JMenuItem("Delete");
        deleteItem.setAccelerator(KeyStroke.getKeyStroke(KeyEvent.VK_D, KeyEvent.CTRL_DOWN_MASK));
        deleteItem.setActionCommand("delete");
        deleteItem.addActionListener(actionListener);

        editMenu.add(newItem);
        editMenu.add(editItem);
        editMenu.add(deleteItem);
        editMenu.addSeparator();

       // confirmMenu = new JMenu("Confirm");
        acceptItem = new JMenuItem("Accept");
        cancelItem = new JMenuItem("Cancel");
        acceptItem.setAccelerator(KeyStroke.getKeyStroke(KeyEvent.VK_ENTER, 0));
        cancelItem.setAccelerator(KeyStroke.getKeyStroke(KeyEvent.VK_ESCAPE, 0));
        editMenu.add(acceptItem);
        editMenu.add(cancelItem);
        acceptItem.setActionCommand("accept");
        acceptItem.addActionListener(actionListener);
        cancelItem.setActionCommand("cancel");
        cancelItem.addActionListener(actionListener);

        // === REPORT MENU ===
        reportMenu = new JMenu("Reports");
        reportMenu.setMnemonic(KeyEvent.VK_R);
        JMenuItem statickiIzvjestaj = new JMenuItem("Staticki izvještaji:");
        statickiIzvjestaj.setEnabled(false);
        reportMenu.add(statickiIzvjestaj);
        reportMenu.addSeparator();
        
        akcijskePonudeIzvjestaj = new JMenuItem("Akcijske ponude");
        akcijskePonudeIzvjestaj.setAccelerator(KeyStroke.getKeyStroke(KeyEvent.VK_A, KeyEvent.ALT_DOWN_MASK));
        akcijskePonudeIzvjestaj.setActionCommand("apIzvjestaj");
        akcijskePonudeIzvjestaj.addActionListener(actionListener);
        vozniParkIzvjestaj = new JMenuItem("Vozni park");
        vozniParkIzvjestaj.setAccelerator(KeyStroke.getKeyStroke(KeyEvent.VK_V, KeyEvent.ALT_DOWN_MASK));
        vozniParkIzvjestaj.setActionCommand("vpIzvjestaj");
        vozniParkIzvjestaj.addActionListener(actionListener);
        putovanjeIzvjestaj = new JMenuItem("Putovanje");
        putovanjeIzvjestaj.setAccelerator(KeyStroke.getKeyStroke(KeyEvent.VK_P, KeyEvent.ALT_DOWN_MASK));
        putovanjeIzvjestaj.setActionCommand("pIzvjestaj");
        putovanjeIzvjestaj.addActionListener(actionListener);
        cjenovnikIzvjestaj = new JMenuItem("Cjenovnik");
        cjenovnikIzvjestaj.setAccelerator(KeyStroke.getKeyStroke(KeyEvent.VK_C, KeyEvent.ALT_DOWN_MASK));
        cjenovnikIzvjestaj.setActionCommand("cIzvjestaj");
        cjenovnikIzvjestaj.addActionListener(actionListener);
        
        reportMenu.add(akcijskePonudeIzvjestaj);
        reportMenu.add(vozniParkIzvjestaj);
        reportMenu.add(putovanjeIzvjestaj);
        reportMenu.add(cjenovnikIzvjestaj);
        reportMenu.addSeparator();
        JMenuItem napredniIzvjestaj = new JMenuItem("Napredni izvještaji:");
        napredniIzvjestaj.setEnabled(false);
        reportMenu.add(napredniIzvjestaj);
        reportMenu.addSeparator();
        
        // === NAPREDNI IZVJESTAJ ===
        voziloNaPutovanjuIzvjestaj = new JMenuItem("Vozilo na putovanju");
        voziloNaPutovanjuIzvjestaj.setAccelerator(KeyStroke.getKeyStroke(KeyEvent.VK_I, KeyEvent.CTRL_DOWN_MASK));
        voziloNaPutovanjuIzvjestaj.setActionCommand("vnpIzvjestaj");
        voziloNaPutovanjuIzvjestaj.addActionListener(actionListener);
        poslovanjePoslovniceIzvjestaj = new JMenuItem("Poslovanje poslovnice");
        poslovanjePoslovniceIzvjestaj.setAccelerator(KeyStroke.getKeyStroke(KeyEvent.VK_P, KeyEvent.CTRL_DOWN_MASK));
        poslovanjePoslovniceIzvjestaj.setActionCommand("ppIzvjestaj");
        poslovanjePoslovniceIzvjestaj.addActionListener(actionListener);
        reportMenu.add(voziloNaPutovanjuIzvjestaj);
        reportMenu.add(poslovanjePoslovniceIzvjestaj);

        // === HELP MENU ===
        helpMenu = new JMenu("Help");
        helpMenu.setMnemonic(KeyEvent.VK_H);

        aboutItem = new JMenuItem("About");
        aboutItem.setAccelerator(KeyStroke.getKeyStroke(KeyEvent.VK_F1, 0));
        helpMenu.add(aboutItem);
        aboutItem.setActionCommand("about");
        aboutItem.addActionListener(actionListener);

        // Dodavanje svega u MenuBar
        add(fileMenu);
        add(editMenu);
        add(helpMenu);
        add(reportMenu);
    }
}
